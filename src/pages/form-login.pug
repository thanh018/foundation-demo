extends ../layouts/layout

block vars
  -title = 'Formlogin'
  -bodyClass = 'form-login-block'
  -lang = 'en'

block container
  .grid-x.grid-padding-x.form-login.margin-top-50
    .small-3
    .small-6
      .cell
        h1.main-title.text-center Login
        .condition-action.text-center
          span.condition Not a member?
          +link("Create now", "register.html", "Create now")(class="login").action-link
        
        form(data-abide='', novalidate='').margin-top-30
          .grid-x.grid-padding-x
            .small-12.cell
              label.form-label
                | Email
                input.form-input(type='text', placeholder='',  aria-describedby='exampleHelpText', required='' pattern="^[a-z0-9._%+-]+@[a-z0-9.-]+\.[a-z]{2,4}$")
                span.form-error
                  | This field is required!
            .small-12.cell
              label.form-label
                | Password
                input.form-input#password(type='password', placeholder='', aria-describedby='exampleHelpText', required='' pattern="^(?=.*[a-z])(?=.*[A-Z])(?=.*\d)[a-zA-Z\d]{8,}$")
                span.form-error
                  | This field is required!
              .condition-action#exampleHelpText
                span.condition Forgot Password? 
                +link("Reset Now", "#", "Reset Now")(class="login").action-link
            
            fieldset.large-12.cell
              button.button.btn-form.btn-black(type='submit', value='Submit') Login
            
    .small-3
  